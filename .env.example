# MySQL数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=database_name
MYSQL_USERNAME=root
MYSQL_PASSWORD=password

# 数据库连接字符串
DATABASE_URL=mysql+pymysql://${MYSQL_USERNAME}:${MYSQL_PASSWORD}@${MYSQL_HOST}:${MYSQL_PORT}/${MYSQL_DATABASE}

# 应用环境设置 (development 或 production)
FLASK_DEBUG=production

# 应用端口
SERVER_PORT=5000

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# DWG服务配置
# 可以手动设置Windows主机IP，用于WSL环境连接Windows上的DWG服务
DWG_HOST_IP=localhost

# DWG服务API密钥
DWG_SERVICE_KEY=api_key

# 百度OCR API配置
# 从百度AI开放平台获取: https://console.bce.baidu.com/ai/
BAIDU_API_KEY=your_api_key
BAIDU_SECRET_KEY=your_secret_key

# 百度地图API配置
# 从百度地图开放平台获取: https://lbsyun.baidu.com/
BAIDU_MAP_API_KEY=your_map_api_key